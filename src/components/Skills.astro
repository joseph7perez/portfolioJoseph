    const techList = Object.values(technologies);
---

<section class="py-5 ">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <!-- <p class="text-gray-600 dark:text-gray-300 mb-12 text-lg">
      Estas son algunas de las herramientas que aplico en mis desarrollos.
    </p> -->

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-5 gap-5">
      {techList.map((tech, index) => (
        <div
          class={`relative group transition-transform duration-300 ease-in-out transform hover:scale-102 hover:rotate-1 animate-fade-up delay-[${index * 100}ms]`}
        >
          <div class="backdrop-blur-md bg-white/5 border border-cyan-950 p-5 rounded-2xl shadow-md hover:shadow-xl transition-all">
            <tech.icon class={`size-10 md:size-12 mx-auto mb-2 transition-transform duration-300 group-hover:rotate-12`} />
            <p class="text-md font-medium text-white">
              {tech.name}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

