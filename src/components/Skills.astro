        }, 
        TAILWIND: {
            name: 'Tailwind',
            icon: Tailwind,
            color: 'text-[#39bef7]'
        },
        JavaScript: {
            name: 'JavaScript',
            icon: JavaScript,
            color: 'text-[#f0da4f]'
        },
        TypeScript: {
            name: 'TypeScript',
            icon: TypeScript,
            color: 'text-[#006a87]'
        },
        PHP: {
            name: 'PHP',
            icon: Php,
            color: 'text-[#fff]'
        },        
        MySQL: {
            name: 'MySQL',
            icon: MySQL,
            color: 'text-[#006a87]'
        },
        Angular: {
            name: 'Angular',
            icon: Angular,
            color: 'text-[#006a87]'
        },
        Python: {
            name: 'Python',
            icon: Python,
            color: 'text-[#006a87]'
        },
        AstroF: {
            name: 'Astro',
            icon: AstroF,
            color: 'text-[#006a87]'
