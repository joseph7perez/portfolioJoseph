                        slug: '4'

        }
    ]

    console.log(projects)
---

{
    projects.map(project => (
        <a href={`/projects/${project.slug}`} class="hover:scale-101 hover:bg-white/5 transition  ">
             <article class="flex flex-col items-center text-center p-4">
                <h3 class="text-2xl font-semibold text-cyan-200 mb-2 ">{project.title}</h3>
                <p class="text-1xs lg:text-mg mb-4 text-pretty">{project.description}</p>
                <ul class="flex gap-x-4 flex-row mb-4">
                    {project.tags.map(tag => (
                        <li class="group flex flex-col items-center">
                            <span class={`flex gap-x-2 rounded-full text-1xs py-1 px-2 items-center font-semibold`}>
                                <tag.icon class="size-8"></tag.icon>     
                            </span>
                            <span class="text-xs md:text-sm text-cyan-200 opacity-0 group-hover:opacity-100 transition-opacity duration-300"> {tag.name}</span>
                        </li>
                    ))}
                </ul>
                <img 
                class="rounded shadow-2xl shadow-cyan-200/20 w-80"
                src={project.image} 
                alt={`Captura de pantalla  ${project.title}`}/>

            </article>
        </a>
       
    ))
}