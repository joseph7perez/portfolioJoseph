import JavaScript from '../icons/JavaScript.astro'
import Sass from '../icons/Sass.astro'
import Html from '../icons/Html.astro'
import MySQL from '../icons/MySQL.astro'
    
    export const tags = {
        NEXTJS: {
            name: 'Next.js',
            icon: NextJS
        },
        TAILWIND: {
            name: 'Tailwind',
            icon: Tailwind
        },
        PHP: {
            name: 'PHP',
            icon: Php
        },
        JavaScript: {
            name: 'JavaScript',
            icon: JavaScript
        },
        Sass: {
            name: 'Sass',
            icon: Sass
        },
        Html: {
            name: 'HTML',
            icon: Html
        },
        MySQL: {
            name: 'MySQL',
            icon: MySQL
        },
    }

    export const projects = [ 
        {
            title: 'Tecnho & EDM Festival',
            description: 'Lorem ipsum dolor sit, amet consectetur adipisicing elit. Vitae, ea enim? Ab nostrum numquam labore aperiam ipsa esse.',
            link: 'https://technofestivaljoseph.netlify.app/',
            github: 'https://github.com/joseph7perez/technofestival',
            image: '/projects/ejemplo.avif',
            tags: [tags.Html ,tags.Sass ,tags.JavaScript],
            slug: '1'
        },
        {
            title: 'UpTask',
            description: 'Sitio web con dashboard para la gestión de proyectos, creando sus respectivas tareas, cambiando su estado a completadas o pendientes.',
            link: '#',
            github: 'https://github.com/joseph7perez/UpTask',
            image: '/projects/UpTask.avif',
            tags: [tags.Html, tags.PHP, tags.JavaScript, tags.Sass, tags.MySQL],
            slug: '2'

        },
          {
            title: 'BarberShop',
            description: 'Sitio web para el agendamiento y reservas de citas para una barbería. Con panel de administrador para el CRUD de servicios.',
            link: '#',
            github: 'https://github.com/joseph7perez/barberShop',
            image: '/projects/UpTask.avif',
            tags: [tags.Html, tags.PHP, tags.JavaScript, tags.Sass, tags.MySQL],
                        slug: '3'

        },
          {
            title: 'UpTask',
            description: 'Sitio web con dashboard para la gestión de proyectos, creando sus respectivas tareas, cambiando su estado a completadas o pendientes',
